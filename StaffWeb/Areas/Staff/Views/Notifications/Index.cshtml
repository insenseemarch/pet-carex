@using StaffWeb.Models
@model NotificationViewModel
@{
    ViewData["Title"] = "Thông báo & Nhắc nhở";
}

<div class="container-fluid py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row">
        <!-- Customer Birthdays Today -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-cake2"></i> Sinh nhật khách hàng hôm nay</h5>
                </div>
                <div class="card-body">
                    @if (Model.CustomerBirthdays.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã KH</th>
                                        <th>Họ tên</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CustomerBirthdays)
                                    {
                                        <tr>
                                            <td>@item.MaKh</td>
                                            <td>@item.HoTen</td>
                                            <td><a href="tel:@item.Sdt">@item.Sdt</a></td>
                                            <td><a href="mailto:@item.Email">@item.Email</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Không có sinh nhật hôm nay</p>
                    }
                </div>
            </div>
        </div>

        <!-- Pet Birthdays Today -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-balloon-heart"></i> Sinh nhật thú cưng hôm nay</h5>
                </div>
                <div class="card-body">
                    @if (Model.PetBirthdays.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã TC</th>
                                        <th>Tên thú cưng</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PetBirthdays)
                                    {
                                        <tr>
                                            <td>@item.MaThucung</td>
                                            <td>@item.TenThucung</td>
                                            <td><a href="tel:@item.Sdt">@item.Sdt</a></td>
                                            <td><a href="mailto:@item.Email">@item.Email</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Không có sinh nhật thú cưng hôm nay</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Exam Reminders -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Nhắc tái khám hôm nay</h5>
                </div>
                <div class="card-body">
                    @if (Model.ExamReminders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã TC</th>
                                        <th>Tên thú cưng</th>
                                        <th>Chủ thú cưng</th>
                                        <th>Ngày tái khám</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ExamReminders)
                                    {
                                        <tr>
                                            <td>@item.MaThucung</td>
                                            <td>@item.TenThucung</td>
                                            <td>@item.HoTen</td>
                                            <td>@item.NgayTaiKham?.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Không có lịch tái khám hôm nay</p>
                    }
                </div>
            </div>
        </div>

        <!-- Vaccination Reminders -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-heart-pulse"></i> Nhắc tiêm phòng hôm nay</h5>
                </div>
                <div class="card-body">
                    @if (Model.VaccinationReminders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã TC</th>
                                        <th>Tên thú cưng</th>
                                        <th>Chủ thú cưng</th>
                                        <th>Ngày tiêm</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.VaccinationReminders)
                                    {
                                        <tr>
                                            <td>@item.MaThucung</td>
                                            <td>@item.TenThucung</td>
                                            <td>@item.HoTen</td>
                                            <td>@item.NgayTiem?.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Không có lịch tiêm phòng hôm nay</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Inactive Customers -->
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-person-x"></i> Khách hàng lâu không quay lại (180 ngày)</h5>
                </div>
                <div class="card-body">
                    @if (Model.InactiveCustomers.Any())
                    {
                        <p class="text-muted mb-3">Có <strong>@Model.InactiveCustomers.Count</strong> khách hàng lâu không sử dụng dịch vụ</p>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã KH</th>
                                        <th>Họ tên</th>
                                        <th>Lần cuối</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.InactiveCustomers.Take(20))
                                    {
                                        <tr>
                                            <td>@item.MaKh</td>
                                            <td>@item.HoTen</td>
                                            <td>
                                                @if (item.LanCuoi.HasValue)
                                                {
                                                    @item.LanCuoi.Value.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa từng sử dụng</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.InactiveCustomers.Count > 20)
                        {
                            <p class="text-muted small mt-2">Hiển thị 20/@Model.InactiveCustomers.Count khách hàng</p>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">Không có khách hàng lâu không quay lại</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .table-sm td, .table-sm th {
            padding: 0.5rem;
            font-size: 0.875rem;
        }
    </style>
}
