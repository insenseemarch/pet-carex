@{
    ViewData["Title"] = "Giam doc";
}

<section class="director-dashboard">
    <div class="director-hero">
        <h1>Bang dieu khien giam doc</h1>
        <p>Tong hop doanh thu, luot kham/tiem va hieu suat bac si toan he thong.</p>
        <div class="director-actions">
            <a class="btn" asp-area="Director" asp-controller="Reports" asp-action="Revenue">Doanh thu tong</a>
            <a class="btn btn-secondary" asp-area="Director" asp-controller="Reports" asp-action="Products">San pham he thong</a>
            <a class="btn btn-secondary" asp-area="Director" asp-controller="Reports" asp-action="CompareBranches">So sanh chi nhanh</a>
        </div>
    </div>
    <div class="director-cards">
        <a class="director-card" asp-area="Director" asp-controller="Reports" asp-action="Revenue">
            <h3>Doanh thu chi nhanh</h3>
            <p>Xem doanh thu theo tung chi nhanh.</p>
        </a>
        <a class="director-card" asp-area="Director" asp-controller="Reports" asp-action="Doctors">
            <h3>Hieu suat bac si</h3>
            <p>So luot kham/tiem va doanh thu.</p>
        </a>
        <a class="director-card" asp-area="Director" asp-controller="Reports" asp-action="Visits">
            <h3>Luot kham / tiem</h3>
            <p>Theo doi luot dich vu theo ngay.</p>
        </a>
        <a class="director-card" asp-area="Director" asp-controller="Reports" asp-action="Products">
            <h3>Ban san pham</h3>
            <p>So sanh doanh thu san pham.</p>
        </a>
        <a class="director-card" asp-area="Director" asp-controller="Reports" asp-action="CompareBranches">
            <h3>So sanh chi nhanh</h3>
            <p>So sanh doanh thu va san pham giua cac chi nhanh.</p>
        </a>
    </div>
</section>
