@{
    ViewData["Title"] = "Quan ly";
}

<section class="manager-dashboard">
    <div class="manager-hero">
        <h1>Bang dieu khien quan ly</h1>
        <p>Theo doi doanh thu, luot kham va hieu suat bac si theo tung chi nhanh.</p>
        <div class="manager-actions">
            <a class="btn" asp-area="Manager" asp-controller="Reports" asp-action="Revenue">Doanh thu chi nhanh</a>
            <a class="btn btn-secondary" asp-area="Manager" asp-controller="Reports" asp-action="Doctors">Theo bac si</a>
        </div>
    </div>
    <div class="manager-cards">
        <a class="manager-card" asp-area="Manager" asp-controller="Reports" asp-action="Revenue">
            <h3>Doanh thu tat ca chi nhanh</h3>
            <p>Tong hop doanh thu theo tung chi nhanh.</p>
        </a>
        <a class="manager-card" asp-area="Manager" asp-controller="Reports" asp-action="Doctors">
            <h3>Hieu suat bac si</h3>
            <p>So luot kham/tiem va doanh thu uoc tinh.</p>
        </a>
        <a class="manager-card" asp-area="Manager" asp-controller="Reports" asp-action="Visits">
            <h3>So luot kham</h3>
            <p>Theo doi luot kham theo ngay.</p>
        </a>
        <a class="manager-card" asp-area="Manager" asp-controller="Reports" asp-action="Products">
            <h3>Doanh thu san pham</h3>
            <p>Thong ke san pham ban chay.</p>
        </a>
    </div>
</section>
