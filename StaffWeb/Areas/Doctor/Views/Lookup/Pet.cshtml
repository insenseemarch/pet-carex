@model StaffWeb.Models.PetHistoryLookupViewModel
@{
    ViewData["Title"] = "Tra cuu thu cung";
}

<section class="card">
    <h1 class="page-title">Tra cuu ho so thu cung</h1>
    <p class="page-subtitle">Nhap ma thu cung de xem lich su kham va tiem.</p>
    <form method="get">
        <div class="form-row">
            <div>
                <label>Ma thu cung</label>
                <input name="petId" value="@Model.PetId" />
            </div>
        </div>
        <button type="submit" class="btn">Tra cuu</button>
    </form>
</section>

@if (Model.Pet == null && !string.IsNullOrWhiteSpace(Model.PetId))
{
    <div class="alert" style="margin-top: 16px;">Khong tim thay thu cung.</div>
}

@if (Model.Pet != null)
{
    <section class="grid two" style="margin-top: 20px;">
        <div class="card">
            <h3>Thu cung</h3>
            <p><strong>Ma:</strong> @Model.Pet.mathucung</p>
            <p><strong>Ten:</strong> @Model.Pet.tenthucung</p>
            <p><strong>Loai:</strong> @Model.Pet.loai</p>
            <p><strong>Giong:</strong> @Model.Pet.giong</p>
        </div>
        <div class="card">
            <h3>Khach hang</h3>
            <p><strong>Ma KH:</strong> @Model.Customer?.makh</p>
            <p><strong>Ho ten:</strong> @Model.Customer?.hoten</p>
            <p><strong>SDT:</strong> @Model.Customer?.sdt</p>
        </div>
    </section>

    <section class="card" style="margin-top: 20px;">
        <h3>Lich su kham</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Ngay</th>
                    <th>Dich vu</th>
                    <th>Bac si</th>
                    <th>Trieu chung</th>
                    <th>Chan doan</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Exams)
                {
                    <tr>
                        <td>@item.ngaysudung.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.madvNavigation?.tendv</td>
                        <td>@item.mabsNavigation?.hoten</td>
                        <td>@item.trieuchung</td>
                        <td>@item.chandoan</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Exams.Count == 0)
        {
            <p class="page-subtitle">Chua co lich su kham.</p>
        }
    </section>

    <section class="card" style="margin-top: 20px;">
        <h3>Lich su tiem phong</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Ngay tiem</th>
                    <th>Vac xin</th>
                    <th>Bac si</th>
                    <th>Trang thai</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Vaccines)
                {
                    <tr>
                        <td>@item.ngaytiem.ToString("dd/MM/yyyy")</td>
                        <td>@item.mavacxinNavigation?.tenvacxin</td>
                        <td>@item.mabsNavigation?.hoten</td>
                        <td>@item.trangthai</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Vaccines.Count == 0)
        {
            <p class="page-subtitle">Chua co lich su tiem.</p>
        }
    </section>
}
