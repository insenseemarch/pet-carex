@model StaffWeb.Models.MedicineSearchViewModel
@{
    ViewData["Title"] = "Tra cứu thuốc";
}

<section class="card">
    <h1 class="page-title">Tra cứu thuốc</h1>
    <p class="page-subtitle">Tìm sản phẩm loại thuốc trong kho.</p>
    <form method="get">
        <div class="form-row">
            <div>
                <label>Từ khóa</label>
                <input name="q" value="@Model.Query" placeholder="Tên thuốc hoặc loại" />
            </div>
        </div>
        <button type="submit" class="btn">Tìm kiếm</button>
    </form>
</section>

<section class="card" style="margin-top: 20px;">
    <h3>Danh sách thuốc</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên</th>
                <th>Loại</th>
                <th>Giá</th>
                <th>Tồn</th>
                <th>HSD</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Medicines)
            {
                <tr>
                    <td>@item.masp</td>
                    <td>@item.tensp</td>
                    <td>@item.loaisp</td>
                    <td>@item.gia.ToString("N0")</td>
                    <td>@item.soluongton</td>
                    <td>@(item.hsd?.ToString("dd/MM/yyyy") ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Medicines.Count == 0)
    {
        <p class="page-subtitle">Không có dữ liệu.</p>
    }
</section>
