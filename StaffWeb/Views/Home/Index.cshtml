@{
    ViewData["Title"] = "Trang chủ";
}

<section class="grid two">
    <div class="card">
        <h1 class="page-title">PetCareX Staff Portal</h1>
        <p class="page-subtitle">
            Hệ thống quản lý nội bộ cho bác sĩ, tiếp tân và quản lý.
        </p>
        @if (!(User.Identity?.IsAuthenticated ?? false))
        {
            <a class="btn" asp-controller="Account" asp-action="Login">Đăng nhập để tiếp tục</a>
        }
    </div>
</section>
