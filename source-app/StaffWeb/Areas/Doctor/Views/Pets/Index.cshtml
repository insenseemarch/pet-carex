@model StaffWeb.Models.DoctorSearchViewModel
@{
    ViewData["Title"] = "Tra cứu thú cưng";
}

<section class="card">
    <h1 class="page-title">Tra cứu thú cưng</h1>
    <p class="page-subtitle">Nhập mã thú cưng để xem lịch sử khám và tiêm.</p>
    <form method="get">
        <div class="form-row">
            <div>
                <label>Mã thú cưng</label>
                <input name="petId" value="@Model.PetId" />
            </div>
        </div>
        <button type="submit" class="btn">Tra cứu</button>
    </form>
</section>

@if (!string.IsNullOrWhiteSpace(Model.PetId) && Model.Pet == null)
{
    <div class="alert" style="margin-top: 16px;">Không tìm thấy thú cưng.</div>
}

@if (Model.Pet != null)
{
    <section class="grid two" style="margin-top: 20px;">
        <div class="card">
            <h3>Thông tin thú cưng</h3>
            <p><strong>Mã:</strong> @Model.Pet.mathucung</p>
            <p><strong>Tên:</strong> @Model.Pet.tenthucung</p>
            <p><strong>Loại:</strong> @Model.Pet.loai</p>
            <p><strong>Giống:</strong> @Model.Pet.giong</p>
        </div>
        <div class="card">
            <h3>Thông tin chủ nuôi</h3>
            <p><strong>Mã KH:</strong> @Model.OwnerId</p>
            <p><strong>Họ tên:</strong> @Model.OwnerName</p>
            <p><strong>SĐT:</strong> @Model.OwnerPhone</p>
        </div>
    </section>

    <section class="card" style="margin-top: 20px;">
        <h3>Lịch sử khám</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Ngày</th>
                    <th>Dịch vụ</th>
                    <th>Bác sĩ</th>
                    <th>Triệu chứng</th>
                    <th>Chẩn đoán</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Exams)
                {
                    <tr>
                        <td>@item.ngaysudung.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.madvNavigation?.tendv</td>
                        <td>@item.mabsNavigation?.hoten</td>
                        <td>@item.trieuchung</td>
                        <td>@item.chandoan</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Exams.Count == 0)
        {
            <p class="page-subtitle">Chưa có lịch sử khám.</p>
        }
    </section>

    <section class="card" style="margin-top: 20px;">
        <h3>Lịch sử tiêm phòng</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Ngày tiêm</th>
                    <th>Vac xin</th>
                    <th>Bác sĩ</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Vaccines)
                {
                    <tr>
                        <td>@item.ngaytiem.ToString("dd/MM/yyyy")</td>
                        <td>@item.mavacxinNavigation?.tenvacxin</td>
                        <td>@item.mabsNavigation?.hoten</td>
                        <td>@item.trangthai</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Vaccines.Count == 0)
        {
            <p class="page-subtitle">Chưa có lịch sử tiêm.</p>
        }
    </section>
}
