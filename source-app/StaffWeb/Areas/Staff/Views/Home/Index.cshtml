@model StaffWeb.Models.StaffDashboardViewModel
@{
    ViewData["Title"] = "Tiếp tân";
}

<section class="staff-dashboard">
    <div class="staff-hero">
        <h1>Chào nhân viên tiếp tân, sẵn sàng phục vụ khách hàng</h1>
        <p>Tạo lịch khám trực tiếp và tra cứu thông tin thú cưng trong một giao diện thống nhất.</p>
        <div class="staff-actions">
            <a class="btn" asp-area="Staff" asp-controller="Appointments" asp-action="Index">Tạo lịch khám</a>
            <a class="btn btn-secondary" asp-area="Staff" asp-controller="Pets" asp-action="Index">Tra cứu</a>
        </div>
    </div>

    <div class="doctor-info-grid">
        <div class="doctor-info-card">
            <h3>Thông tin nhân viên</h3>
            <p><strong>Họ tên:</strong> @(Model.Staff?.hoten ?? "Đang cập nhật")</p>
            <p><strong>Mã NV:</strong> @(Model.Staff?.manv ?? "-")</p>
            <p><strong>Loại NV:</strong> @(Model.Staff?.loainv ?? "-")</p>
        </div>
        <div class="doctor-info-card">
            <h3>Chi nhánh</h3>
            <p><strong>Tên:</strong> @(Model.Branch?.tencn ?? "Đang cập nhật")</p>
            <p><strong>Địa chỉ:</strong> @(Model.Branch?.diachi ?? "-")</p>
            <p><strong>SĐT:</strong> @(Model.Branch?.sdt ?? "-")</p>
        </div>
        <div class="doctor-info-card">
            <h3>Ca trực</h3>
            <p><strong>Ngày:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
            <p><strong>Giờ:</strong> @DateTime.Now.ToString("HH:mm")</p>
            <p><strong>Trạng thái:</strong> Đang làm việc</p>
        </div>
    </div>

    <div class="staff-cards">
        <a class="staff-card" asp-area="Staff" asp-controller="Appointments" asp-action="Index">
            <h3>Tạo lịch khám trực tiếp</h3>
            <p>Ghi nhận lịch khám ngay tại quầy tiếp nhận.</p>
        </a>
        <a class="staff-card" asp-area="Staff" asp-controller="Pets" asp-action="Index">
            <h3>Tra cứu thông tin thú cưng</h3>
            <p>Xác định khách mới/khách cũ theo mã thú cưng hoặc SĐT.</p>
        </a>
    </div>
</section>
