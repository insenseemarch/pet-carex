@model KhachHangWeb.Models.VaccinationBookingViewModel
@{
    ViewData["Title"] = "Đặt lịch tiêm phòng";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sora:wght@300;500;700&display=swap">
<style>
  .booking-shell { font-family: "Sora", sans-serif; background: radial-gradient(circle at top left, #fff3c3 0%, #ffe1de 40%, #fff8f9 100%); padding: 28px; border-radius: 18px; }
  .booking-title { font-size: 28px; font-weight: 700; color: #b86200; margin-bottom: 16px; }
  .booking-card { background: #ffffff; border-radius: 16px; padding: 22px; box-shadow: 0 10px 30px rgba(184, 98, 0, 0.08); }
  .booking-label { font-weight: 600; color: #8b4500; }
  .booking-actions { display: flex; gap: 12px; }
  .booking-sub { color: #d67700; font-size: 14px; }
  .booking-note { min-height: 90px; }
</style>

<div class="booking-shell">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div>
      <div class="booking-title">Đặt lịch tiêm phòng</div>
      <div class="booking-sub">Chọn chi nhánh, thú cưng, vaccine, bác sĩ và khung giờ phù hợp.</div>
    </div>
    <a class="btn btn-outline-success" href="/booking/index">Đặt lịch khám</a>
  </div>

  @if (TempData["Booked"] != null)
  {
    <div class="alert alert-success">Đặt lịch tiêm phòng thành công.</div>
  }
  @if (!ViewData.ModelState.IsValid)
  {
    <div class="alert alert-danger">Vui lòng kiểm tra lại thông tin.</div>
  }

  <div class="booking-card">
    <form method="post" action="/booking/createvaccination">
      <div class="row g-3">
        <div class="col-md-4">
          <label class="form-label booking-label">Chi nhánh</label>
          <select class="form-select" id="branchSelect" name="BranchId">
            @foreach (var b in Model.Branches)
            {
              <option value="@b.Id" selected="@(Model.BranchId == b.Id ? "selected" : null)">@b.Name</option>
            }
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label booking-label">Mã thú cưng</label>
          <select class="form-select" id="petSelect" name="PetId">
            @foreach (var p in Model.Pets)
            {
              <option value="@p.Id" selected="@(Model.PetId == p.Id ? "selected" : null)">@p.Id - @p.Name</option>
            }
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label booking-label">Dịch vụ tiêm phòng</label>
          <select class="form-select" id="serviceSelect" name="ServiceId">
            @foreach (var s in Model.Services)
            {
              <option value="@s.Id" selected="@(Model.ServiceId == s.Id ? "selected" : null)">@s.Name</option>
            }
          </select>
        </div>

        <div class="col-md-4">
          <label class="form-label booking-label">Vaccine</label>
          <select class="form-select" id="vaccineSelect" name="VaccineId">
            @foreach (var v in Model.Vaccines)
            {
              <option value="@v.Id" selected="@(Model.VaccineId == v.Id ? "selected" : null)">@v.Name</option>
            }
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label booking-label">Ngày hẹn</label>
          <input class="form-control" id="dateInput" type="date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-4">
          <label class="form-label booking-label">Khung giờ</label>
          <select class="form-select" id="slotSelect" name="Slot">
            <option value="">Chọn khung giờ</option>
            @foreach (var s in Model.Slots)
            {
              <option value="@s.Id" selected="@(Model.Slot == s.Id ? "selected" : null)">@s.Name</option>
            }
          </select>
        </div>

        <div class="col-md-12">
          <label class="form-label booking-label">Bác sĩ trực</label>
          <select class="form-select" id="doctorSelect" name="DoctorId">
            <option value="">Chọn bác sĩ</option>
            @foreach (var d in Model.Doctors)
            {
              <option value="@d.Id" selected="@(Model.DoctorId == d.Id ? "selected" : null)">@d.Name</option>
            }
          </select>
        </div>
        @if ((Model.Doctors?.Count ?? 0) == 0)
        {
          <div class="col-12">
            <div class="text-danger small booking-no-doctor">Không có bác sĩ phù hợp cho khung giờ đã chọn.</div>
          </div>
        }

        <div class="col-12">
          <label class="form-label booking-label">Ghi chú</label>
          <textarea class="form-control booking-note" name="Note" placeholder="Thông tin bổ sung về thú cưng...">@Model.Note</textarea>
        </div>
      </div>

      <div class="booking-actions mt-3">
        <button type="button" class="btn btn-secondary" onclick="history.back()">Quay lại</button>
        <button type="submit" class="btn btn-warning">Xác nhận</button>
      </div>
    </form>
  </div>
</div>

<script>
  const branchSelect = document.getElementById('branchSelect');
  const petSelect = document.getElementById('petSelect');
  const serviceSelect = document.getElementById('serviceSelect');
  const vaccineSelect = document.getElementById('vaccineSelect');
  const dateInput = document.getElementById('dateInput');
  const slotSelect = document.getElementById('slotSelect');
  const doctorSelect = document.getElementById('doctorSelect');

  function reload() {
    const branch = branchSelect.value;
    const pet = petSelect.value;
    const service = serviceSelect.value;
    const vaccine = vaccineSelect.value;
    const date = dateInput.value;
    const slot = slotSelect.value;
    const doctor = doctorSelect.value;
    const url = `/booking/vaccination?branchId=${branch}&petId=${pet}&serviceId=${service}&vaccineId=${vaccine}&date=${date}&slot=${slot}&doctorId=${doctor}`;
    window.location.href = url;
  }

  branchSelect.addEventListener('change', reload);
  serviceSelect.addEventListener('change', reload);
  vaccineSelect.addEventListener('change', reload);
  dateInput.addEventListener('change', reload);
  slotSelect.addEventListener('change', reload);
  doctorSelect.addEventListener('change', reload);
</script>
