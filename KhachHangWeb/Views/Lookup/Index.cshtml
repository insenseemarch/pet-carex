@{
    ViewData["Title"] = "Tra cứu";
}
<h3>Tra cứu</h3>
<div class="row g-3">
  <div class="col-md-6">
    <h5>Tra cứu đơn hàng</h5>
    <form method="post" action="/lookup/order">
      <div class="mb-2"><input class="form-control" name="orderId" placeholder="Mã đơn" /></div>
      <button class="btn btn-outline-primary">Xem</button>
    </form>
  </div>
  <div class="col-md-6">
    <h5>Tra cứu lịch dịch vụ</h5>
    <form method="post" action="/lookup/booking">
      <div class="mb-2"><input class="form-control" name="bookingId" placeholder="Mã lịch" /></div>
      <button class="btn btn-outline-primary">Xem</button>
    </form>
  </div>
</div>
